<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Start Date :"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:gravity="left"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/startd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="right"
            android:text=" "
            android:maxLength="10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="End Date :"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:gravity="left"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/endd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text=" "
            android:maxLength="10"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Remaining Days :"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:gravity="left"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/remd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text=" "
            android:maxLength="10"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_lay_date"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@color/blue_final">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Technology"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Members"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:layout_marginTop="5dip" />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:layout_marginRight="8dip"
                android:layout_marginTop="5dip" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_lay_mem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@color/blue_final">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Details"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/detailtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text=" "
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/task_lay_details"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@color/blue_final">
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.molo17.customizablecalendar.library.components.CustomizableCalendar
        android:id="@+id/view_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout="@layout/c_calender"
        android:layout_marginTop="-25dp"
        android:layout_marginBottom="-10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/if_you_have_completed_this_project_then_submit_by_clicking_below_button"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey"/>

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardElevation="8dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/blue_final"
        android:layout_margin="10dp">
        <Button
            android:background="@drawable/ripple_white"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/submit_project"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="15sp"
            android:text="@string/submit"
            android:ems="15"
            android:textAllCaps="true" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>